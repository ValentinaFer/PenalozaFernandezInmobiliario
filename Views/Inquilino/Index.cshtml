@model IndexInquilinoViewModel;
@{
    ViewData["Title"] = "Home Page";

}

<div class="text-center row fw-light bg-light rounded-4 py-5 px-4 shadow">

    <div class="col-12">
        <h1 class="display-4 ">Inquilinos</h1>

        @Html.Partial("_ToastModal")
        <a asp-action="Upsert" class="btn btn-primary text-light hover rounded-pill m-2 p-3"
            title="Agregar un nuevo Inquilino">
            <p class="d-inline">Agregar nuevo Inquilino</p><i class="bi bi-person-add ps-1"></i>
        </a>
    </div>
    <div class="col">
        <div class="table-responsive-lg">
            <table class="table table-light text-start ">
                <thead class="text-secondary">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Inquilinos.FirstOrDefault().Nombre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Inquilinos.FirstOrDefault().Apellido)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Inquilinos.FirstOrDefault().Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Inquilinos.FirstOrDefault().Telefono)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Inquilinos.FirstOrDefault().Dni)
                        </th>
                        <th class="text-end">
                            Acciones
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @if (ViewData["TablaVacia"] != null && ViewData["TablaVacia"] != ""){
                        <text>
                            <tr scope="row">
                            <td colspan="6" class="text-center">@ViewData["TablaVacia"]</td>
                            </tr>
                        </text>
                    }
                    @foreach (var item in Model.Inquilinos)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Apellido)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Telefono)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Dni)
                            </td>
                            <td class="text-nowrap text-end">
                                <a asp-action="DetalleInquilino" asp-route-id="@item.Id" title="Ver más"
                                    class="btn btn-info py-1 px-2"><i class="bi bi-person-vcard-fill text-light"></i></a>
                                <a asp-action="Upsert" asp-route-id="@item.Id" title="Editar"
                                    class="btn btn-primary py-1 px-2"><i class="bi bi-pencil-fill text-light"></i></a>
                                <a asp-action="Eliminar" asp-route-id="@item.Id" title="Eliminar"
                                    class="btn btn-danger py-1 px-2"><i class="bi bi-trash-fill text-light"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
                
            </table>
        </div>

        <div class="col">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    
                    @if (Model.PageNumber == 1){
                        <text>
                             <li class="page-item disabled">
                                <a class="page-link">Previous</a>
                            </li>
                        </text>
                    } else {
                        <text>
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber-1)">Previous</a>
                            </li>
                        </text>
                    }

                    @for (int i = (Math.Max(1, Model.PageNumber-1)); i <= Math.Min(Model.TotalPages, Model.PageNumber+2); i++){
                        if (i == Model.PageNumber){
                            <li class="page-item active">
                                <span class="page-link">@i</span>
                            </li>
                        } else {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-pageNumber="@i">@i</a>
                            </li>
                        }
                    }
                    
                    @if (Model.HasMorePages){
                        <text>
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber+1)">Next</a>
                            </li>
                        </text>
                    } else {
                        <text>
                            <li class="page-item">
                                <a class="page-link disabled">Next</a>
                            </li>
                        </text>
                    }
                    
                </ul>
            </nav>
        </div>

    </div>




    @section Scripts {
        @{
            if (Model != null && Model.ToastMessage != null)
            {
                <text>
                    <script>
                        $(document).ready(function () {

                            var toastMessage = "@Model.ToastMessage";
                            if (toastMessage) {
                                $("#toastMessage").text(toastMessage);
                                $("#liveToast").toast("show");
                            }

                        })
                    </script>
                </text>
            }
        }

    }

</div>
