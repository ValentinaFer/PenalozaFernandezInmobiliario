@model IndexInquilinoViewModel;
@{
    ViewData["Title"] = "Home Page";

}

<div class="text-center">

    <h1 class="display-4">Inquilinos</h1>

    @Html.Partial("_ToastModal")
    <a asp-action="Upsert" class="btn btn-primary text-light hover rounded-pill m-2 p-3"
        title="Agregar un nuevo Inquilino">
        <p class="d-inline">Agregar nuevo Inquilino</p><i class="bi bi-person-add ps-1"></i>
    </a>
    <table class="table">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Inquilinos.FirstOrDefault().Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Inquilinos.FirstOrDefault().Apellido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Inquilinos.FirstOrDefault().Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Inquilinos.FirstOrDefault().Telefono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Inquilinos.FirstOrDefault().Dni)
                </th>
                <th>

                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Inquilinos)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dni)
                    </td>
                    <th>
                        <a asp-action="DetalleInquilino" asp-route-id="@item.Id">Ver más</a>
                    </th>

                    <td class="text-nowrap">
                        <a asp-action="Upsert" asp-route-id="@item.Id" title="Editar"><i
                                class="bi bi-pencil-fill text-primary"></i></a>
                        <a asp-action="Eliminar" asp-route-id="@item.Id" title="Eliminar"><i
                                class="bi bi-trash-fill text-danger"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-primary" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber-1)">
        <i class="bi bi-arrow-left"></i> Volver
    </a>
    <a class="btn btn-primary" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber+1)">
        Siguiente <i class="bi bi-arrow-right"></i>
    </a>


    @section Scripts {
        @{
            //if (Model != null && Model.ToastMessage != null) //descomentar con confianza jeje
            {
                <text>
                    <script>
                        $(document).ready(function () {

                            var toastMessage = "@Model.ToastMessage";
                            if (toastMessage) {
                                $("#toastMessage").text(toastMessage);
                                $("#liveToast").toast("show");
                            }

                        })
                    </script>
                </text>
            }
        }

    }

</div>
